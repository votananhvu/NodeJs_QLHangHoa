<% include header.ejs %>
  <!-- Page content-->
  <div class="container-fluid">
    <h1 class="mt-4">Dữ liệu trong csdl</h1>
    <table class="table">
      <tr>
        <th>Mã SP</th>
        <th>Tên mặt hàng</th>
        <th>Thương hiệu</th>
        <th>Đơn giá</th>
        <th>Hình ảnh</th>
      </tr>
      <% dshh.forEach(hh=> { %>
        <tr>
          <td><%= hh.masp %> </td>
          <td><%= hh.name %></td>
          <td><%= hh.thuonghieu %></td>
          <td><%= hh.dongia %></td>
          <td>
            <% if(hh.img != null) { %> 
              <img src='/images/<%= hh.img %>' height="100px">
            <% } else { %> 
              <img src="https://via.placeholder.com/100" height="100px">
            <% } %> 
          </td>
          <td>
              <a href="/sua/<%= hh._id %>" class="btn btn-warning">Sửa</a>
              <a onclick="xoadulieu('<%= hh._id %>')" class="btn btn-danger">
                Xóa
              </a>     
          </td>
        </tr>
        <% }); %>
    </table>
  </div>

  <script>
    function xoadulieu(id) {
      Swal.fire({
        title: 'Muốn xóa mặt hàng này?',
        text: "",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Xóa'
      }).then((result) => {
        if (result.isConfirmed) {
          document.location = "/xoa/" + id
        }
      })
    }
  </script>
  <% include footer.ejs %> 